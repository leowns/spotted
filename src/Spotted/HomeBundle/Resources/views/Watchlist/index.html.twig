
{% for entity in entities %}
                            <div class="item col-xs-12 col-sm-12 col-md-6">
                                <div class="spotted-message">
                                    <h2 class="spotted-title">
                                        <a href="#">
                                            <strong>{{ entity.post.location.name }} ({{ entity.post.location.city.name }})</strong>, {{ entity.post.tags.name }}
                                        </a>
                                    </h2>
                                    <div class="datum">
                                        <i class="fa fa-clock-o"></i>{% if entity.post.date %}{{ entity.post.date|date('d.m.Y H:i') }}{% endif %}
                                    </div>
                                    <div class="gender">
                                    {% if entity.post.gender =='female' %}
                                        <img src="{{ asset('bundles/spottedhome/images/female.png') }}" />
                                    {% endif %}
                                    {% if entity.post.gender =='male' %}
                                        <img src="{{ asset('bundles/spottedhome/images/male.png') }}" />
                                    {% endif %}
                                    </div>
                                    <div style="cursor:pointer;" class="text-main">
                                        {% if entity.post.gender =='female' %}
                                        <span style="color: #C42EAF"><strong>Sie:</strong></span>
                                        {% endif %}
                                        {% if entity.post.gender =='male' %}
                                        <span style="color: #587fd8"><strong>Er:</strong></span>
                                        {% endif %}

                                        {{ entity.post.text }}
                                    </div>
                                </div>
                                <div class="spotted-slidedown spotted-comments">
                                    <div class="container">
                                        <div class="row" style="margin-bottom: 10px;">
                                            <div class="col-xs-12">
                                                <h4>Kommentare:</h4>
                                            </div>
                                        </div>
											<div id="comment_wrapper{{ entity.post.id }}">
												

											</div>
                                    </div>

                                    <div class="add_comment container">
										{#<form name="comment_form" id="comment_form" action="{{ path('spotted_secured_add_comment',{ postid: entity.id }) }}" method="post">#}
											<div class="row">
												<textarea id="txthint{{ entity.post.id }}" name="txthint" required="required" placeholder="Schreibe einen Hinweis..." maxlength="255"></textarea>
												
											</div>
											<div class="row" style="margin-top: 10px">
												<div class="col-xs-12">
													<button id="{{ entity.post.id }}" name="btncomment" class="btn btn-danger pull-right" type="submit">Kommentieren</button>
												</div>
											</div>
										{#</form>#}
                                    </div>

                                </div>

                                <div class="spotted-slidedown spotted-match">
                                    <div class="container">
                                        <div class="row" style="margin-bottom: 10px;">
                                            <div class="col-xs-12">
                                                <h4>Ausgezeichnet! Ihr habt euch gefunden:</h4>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <textarea style="height: 140px;" class="message_text" required="required" placeholder="Schreibe deine Nachricht..."></textarea>
                                        </div>
                                        <div class="row" style="margin-top: 10px">
                                            <div class="col-xs-12">
                                                <button class="btn btn-danger pull-right" type="submit">E-Mail senden</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="spotted-details container">
                                    <div class="row">
                                        <div class="box comment" data-placement="top" id="{{ entity.post.id }}" data-toggle="tooltip" data-original-title="Kommentieren">
                                            <i class="fa fa-comment"></i>
                                        </div>
                                        {% if entity.post.onwatchlist == 0 %}
                                        <div class="box wishlist"  id="{{ entity.post.id }}" data-placement="top" data-toggle="tooltip" data-original-title="Auf Watchlist">
                                        </div>
										{% else %}
										<div class="box wishlist active"  id="{{ entity.post.id }}" data-placement="top" data-toggle="tooltip" data-original-title="Von Watchlist entfernen">
                                            <a href="#delmodal{{ entity.post.id }}" data-toggle="modal"><i class="fa fa-eye"></i></a>
                                        </div>
										{% endif %}
                                        <div class="box box-spotted">
                                            Das bin ich! <img src="{{ asset('bundles/spottedhome/images/match.png') }}" />
                                        </div>
                                    </div>
                                </div>
                            </div>
						<div class="modal" id="delmodal{{ entity.post.id}}">
							<div class="modal-dialog">
							  <div class="modal-content">
								<div class="modal-header">
								  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
								  <h4 class="modal-title">Post von Watchlist entfernen</h4>
								</div>
								<div class="modal-body">
								  Wollen Sie diesen Post von Ihrer Watchlist entfernen?
								</div>
								<div class="modal-footer">
								  <a href="#" data-dismiss="modal" class="btn btn-primary">Abbrechen</a>
								  <a   href="{{ path('spotted_secured_del_watchlist', {'postid': entity.post.id}) }}" class="btn btn-danger">Entfernen</a>
								</div>
							  </div>
							</div>
						</div> 
							 
							
							{% else %}
					<strong>Keine Posts wurden gefunden!</strong>
					
    
                        {% endfor %}


						
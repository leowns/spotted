<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Spotted\HomeBundle\Entity\Post" table="Post">
    <id name="id" type="integer" column="ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="text" column="text" nullable="false"/>
    <field name="date" type="datetime" column="date" nullable="false"/>
    <field name="gender" type="string" column="gender" length="45" nullable="false"/>
	<field name="onwatchlist" type="integer" column="onwatchlist" nullable="false"/>
    <many-to-one field="user" target-entity="User">
      <join-columns>
        <join-column name="User_ID" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="tags" target-entity="Tags">
      <join-columns>
        <join-column name="Tags_ID" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="location" target-entity="Location">
      <join-columns>
        <join-column name="Location_ID" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>

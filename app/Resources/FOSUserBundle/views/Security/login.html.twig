{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="login-box container">
        <header class="login-header">
            <div id="logo">
                <a href="{{ path('spotted_home_homepage') }}"  style="width: 100%; height: 100%; display: block;">

                </a>
            </div>
        </header>
        <h4 class="login-title">Login</h4>
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">

            {% if error %}
                <div>{{ error|trans }}</div>
            {% endif %}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="row hover-left">
                <div class="form-group input-icon input-icon-left">
                    <i class="fa fa-user"></i>
                    <input type="text" placeholder="Username" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
            </div>
            <div class="row hover-left">
                <div class="form-group input-icon input-icon-left">
                    <i class="fa fa-lock"></i>
                    <input type="password" placeholder="Password" class="form-control" id="password" name="_password" required="required" />
                </div>
            </div>
            <div class="login-submit row">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Remember me?</label>

                <input type="submit" class="btn btn-danger pull-right" id="_submit" name="_submit" value="Log In" />
            </div>
        </form>
        <footer class="login-footer row">
            Copyright &copy; 2013 ZHAW-Spotted.
        </footer>
    </div>
{% endblock fos_user_content %}
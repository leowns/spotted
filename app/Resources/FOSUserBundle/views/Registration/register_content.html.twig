
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="register-form fos_user_registration_register">

        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-user"></i>
                {{ form_widget(form.username, {'attr': {'placeholder': 'Benutzername'}}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-envelope"></i>
                {{ form_widget(form.email, {'attr': {'placeholder': 'E-Mail'}}) }}
            </div>
            {{ form_errors(form.email) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-lock"></i>
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Passwort'}}) }}
            </div>
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-lock"></i>
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Passwort Best√§tigung'}}) }}
            </div>
        </div>
        <div class="login-submit row">
            <input type="submit" class="btn btn-danger pull-right" value="Abschicken" />
        </div>

        {{ form_rest(form) }}

    </form>






    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="register-form fos_user_registration_register">



        <div class="row hover-left">
            <div class="form-group">
                Geschlecht<br>
                {{ form_widget(form.gender, {'attr': {'class': 'btn-group', 'data-toggle': 'buttons'}}) }}
            </div>
            {{ form_errors(form.firstname) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-envelope"></i>
                {{ form_widget(form.email, {'attr': {'placeholder': 'E-Mail'}}) }}
            </div>
            {{ form_errors(form.email) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-user"></i>
                {{ form_widget(form.firstname, {'attr': {'placeholder': 'Vorname'}}) }}
            </div>
            {{ form_errors(form.firstname) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-user"></i>
                {{ form_widget(form.lastname, {'attr': {'placeholder': 'Nachname'}}) }}
            </div>
            {{ form_errors(form.lastname) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-lock"></i>
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Passwort (min. 6 Zeichen)'}}) }}
            </div>
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="row hover-left">
            <div class="form-group input-icon input-icon-left">
                <i class="fa fa-lock"></i>
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Passwort Best√§tigung'}}) }}
            </div>
        </div>
        <div class="login-submit row">
            <input type="submit" class="btn btn-danger pull-right" value="Abschicken" />
        </div>

        {{ form_widget(form._token) }}

    </form>
